@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Spinny Button Test</h1>
    <p class="lead">This app is used to test spinny buttons in MVC</p>
    <p>The app will allow you to click buttons and have them spin whilst performing actions. Beside each button is a description of what happens when clicking it</p>
</div>

<form>
    <div class="row">
        <div class="col-lg-12">
            <h3>
                <small>
                    Test The Spinner
                </small>
            </h3>
            <label>Clicking this button will display a spinner for 2 seconds</label>
            <br />
            <button id="btn-demo-spinner" class="btn btn-primary app-button" data-submit-text="Please Wait...">
                <i class="fas fa-download"></i>
                <span>Spin</span>
            </button>
        </div>
    </div>
</form>
<hr />
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("DirectDownload", "Home", FormMethod.Post, new { id = "download-from-controller-direct" }))
        {
            <h3>
                <small>
                    Download From Controller
                </small>
            </h3>
            <label>Clicking this button will download a file directly from the MVC controller</label>
            <br />
            <button id="btn-download-from-controller" class="btn btn-primary app-button" data-submit-text="Please Wait...">
                <i class="fas fa-download"></i>
                <span>Download</span>
            </button>
        }
    </div>
</div>
<hr />
<div class="row">
    <div class="col-lg-12">
        <form>
            <h3>
                <small>
                    Download Through Ajax
                </small>
            </h3>
            <label>Clicking this button will download a file from an ajax call</label>
            <br />
            <button id="btn-download-from-ajax" class="btn btn-primary app-button" data-submit-text="Please Wait...">
                <i class="fas fa-download"></i>
                <span>Download</span>
            </button>
        </form>
    </div>
</div>